@model MoviesReviewer.Models.Preference

@{
    ViewData["Title"] = "Usuń preferencję";
}

<h1>Usuń preferencję</h1>

<h3>Czy na pewno chcesz usunąć tę preferencję?</h3>
<div>
    <h4>Preference</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @GetDisplayName(Model.Type);
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="USUŃ" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>

@functions {
    public string GetDisplayName(string preferenceType)
    {
        return preferenceType == MoviesReviewer.Enums.PreferenceType.WATCHED
            ? "OBEJRZANY"
            : "DO OBEJRZENIA";
    }
}
