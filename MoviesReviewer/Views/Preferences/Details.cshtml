@model MoviesReviewer.Models.Preference

@{
    ViewData["Title"] = "Szczegóły preferencji";
}

<h1>Szczegóły</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Movie.Title)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @GetDisplayName(Model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> |
    <a asp-action="Index">Wróć do listy</a>
</div>

@functions {
    public string GetDisplayName(string preferenceType)
    {
        return preferenceType == MoviesReviewer.Enums.PreferenceType.WATCHED
            ? "OBEJRZANY"
            : "DO OBEJRZENIA";
    }
}